{
  "info": {
    "name": "Appointment Service API",
    "description": "Complete API collection for Hospital Appointment Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "appointment-service-collection"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8082",
      "type": "string"
    },
    {
      "key": "jwtToken",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Appointments",
      "item": [
        {
          "name": "Create Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": 1,\n  \"patientName\": \"John Doe\",\n  \"doctorId\": 1,\n  \"doctorName\": \"Dr. Sarah Smith\",\n  \"department\": \"Cardiology\",\n  \"appointmentTime\": \"2025-03-15T10:00:00\",\n  \"durationMinutes\": 30,\n  \"consultationFee\": 500.00,\n  \"reasonForVisit\": \"Regular heart checkup\",\n  \"notes\": \"Patient has history of high blood pressure\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "appointments"]
            }
          }
        },
        {
          "name": "Get Appointment by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/appointments/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "appointments", "1"]
            }
          }
        },
        {
          "name": "Get Patient Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/appointments/patient/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "appointments", "patient", "1"]
            }
          }
        },
        {
          "name": "Check-In Appointment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"CHECKED_IN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/appointments/1/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "appointments", "1", "status"]
            }
          }
        },
        {
          "name": "Complete Appointment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"COMPLETED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/appointments/1/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "appointments", "1", "status"]
            }
          }
        },
        {
          "name": "Cancel Appointment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"CANCELLED\",\n  \"reason\": \"Patient requested rescheduling\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/appointments/1/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "appointments", "1", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Monitoring",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Prometheus Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/actuator/prometheus",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "prometheus"]
            }
          }
        }
      ]
    }
  ]
}
